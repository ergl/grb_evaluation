%% fanout of the local broadcast tree inside DCs
{tree_fanout, 2}.

%% number of partitions per cluster
{ring_size, 8}.

%% latencies affect outbound and incoming traffic, so set it to half of the RTT
{latencies, #{
  nancy => [{rennes, 10}],
  rennes => [{nancy, 10}]
}}.

{clusters, #{
  nancy => #{servers => ['apollo-1-1.imdea',
                         'apollo-1-2.imdea',
                         'apollo-1-3.imdea'],

             clients => ['apollo-1-4.imdea',
                         'apollo-1-5.imdea',
                         'apollo-1-6.imdea']},

  rennes => #{servers => ['apollo-1-7.imdea',
                         'apollo-1-8.imdea',
                         'apollo-1-9.imdea'],

             clients => ['apollo-1-10.imdea',
                         'apollo-1-11.imdea',
                         'apollo-1-12.imdea']}
}}.
