%% fanout of the local broadcast tree inside DCs
{tree_fanout, 2}.

%% number of partitions per cluster
{ring_size, 64}.

%% how often to perform local stableVC computation
{local_broadcast_interval_ms, 5}.

%% how often to replicate transactions to other replicas
{replication_interval_ms, 5}.

%% how often to prune committedBlue
{prune_interval_ms, 50}.

%% latencies affect outbound and incoming traffic, so set it to half of the RTT
%% rounded from Table 1 at https://www.info.ucl.ac.be/~pvr/p111-Bravo.pdf
{latencies, #{
  virginia => [{oregon, 50}, {ireland, 40}],
  oregon => [{virginia, 50}, {ireland, 70}],
  ireland => [{virginia, 40}, {oregon, 70}]
}}.

{clusters, #{
  oregon => #{servers => ['apollo-1-1.imdea',
                          'apollo-1-2.imdea',
                          'apollo-1-3.imdea'],

              clients => ['apollo-1-4.imdea',
                          'apollo-1-5.imdea',
                          'apollo-1-6.imdea']},

  virginia => #{servers => ['apollo-1-7.imdea',
                            'apollo-1-8.imdea',
                            'apollo-1-9.imdea'],

                clients => ['apollo-1-10.imdea',
                            'apollo-1-11.imdea',
                            'apollo-1-12.imdea']},

  ireland => #{servers => ['apollo-2-1.imdea',
                           'apollo-2-2.imdea',
                           'apollo-2-3.imdea'],

               clients => ['apollo-2-5.imdea',
                           'apollo-2-6.imdea',
                           'apollo-2-7.imdea']}
}}.
