% git / rebar config
{grb_branch, "master"}.

% options: default, cure, ft_cure, uniform_blue, metrics
{grb_rebar_profile, uniform_blue}.

% options: default, ignore_self_reported_latency
{lasp_bench_rebar_profile, default}.

{latencies, #{
    virginia => [{california, 30}, {ireland, 33}, {frankfurt, 45}, {brazil, 57}],
    california => [{virginia, 30}, {ireland, 69}, {frankfurt, 74}, {brazil, 85}],
    ireland => [{virginia, 33}, {california, 69}, {frankfurt, 12}, {brazil, 89}],
    frankfurt => [{virginia, 45}, {california, 74}, {ireland, 12}, {brazil, 101}],
    brazil => [{virginia, 57}, {california, 85}, {ireland, 89}, {frankfurt, 101}]
}}.

% Override quorum size, set to -1 if we want to use default
{red_quorum_override, 3}.
{uniform_visibility_factor, 1}.
{red_leader_cluster, frankfurt}.
{prepared_blue_stale_check_ms, 5000}.
{clusters, #{
  virginia => #{servers => ['apollo-1-1.imdea', 'apollo-1-2.imdea'],
                clients => ['apollo-1-3.imdea']}

, california => #{servers => ['apollo-1-4.imdea', 'apollo-1-5.imdea'],
                  clients => ['apollo-1-6.imdea']}

, ireland => #{servers => ['apollo-1-7.imdea', 'apollo-1-9.imdea'],
               clients => ['apollo-1-10.imdea']}

, frankfurt => #{servers => ['apollo-1-11.imdea', 'apollo-1-12.imdea'],
                 clients => ['apollo-2-1.imdea']}

, brazil => #{servers => ['apollo-2-2.imdea', 'apollo-2-3.imdea'],
              clients => ['apollo-2-5.imdea']}

}}.

% grb Config (same keys as in sys.config)
{tree_fanout, 2}.
{ring_creation_size, 16}.
{tcp_id_len_bits, 16}.
{oplog_readers, 20}.
{version_log_size, 25}.
{self_blue_heartbeat_interval, 5}.
{partition_ready_wait_ms, 1}.
{basic_replication_interval, 5}.
{remote_clock_broadcast_interval, 5}.
{uniform_replication_interval, 5000}.
{local_broadcast_interval, 1}.
{prune_committed_blue_interval, 50}.
{red_heartbeat_interval, 1}.
{red_delivery_interval, 1}.
{red_prune_interval, 20}.
{red_coord_pool_size, 100}.
{visibility_sample_rate, 1000}.
