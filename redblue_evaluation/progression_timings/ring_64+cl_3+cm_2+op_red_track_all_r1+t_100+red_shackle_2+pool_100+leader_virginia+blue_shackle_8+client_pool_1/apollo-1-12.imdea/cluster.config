% git / rebar config
{grb_branch, "commit-timings"}.
% options: default, basic_replication, uniform_blue
{grb_rebar_profile, default}.

% Grb Config (same keys as in sys.config)
{ring_creation_size, 64}.
{op_log_replicas, 20}.
{version_log_size, 25}.
{self_blue_heartbeat_interval, 5}.
{op_prepare_wait_ms, 5}.
{basic_replication_interval, 5}.
{uniform_replication_interval, 5000}.
{local_broadcast_interval, 5}.
{prune_committed_blue_interval, 50}.
{remote_clock_broadcast_interval, 10000}.
{red_heartbeat_interval, 5}.
{red_delivery_interval, 10}.
{red_prune_interval, 20}.
{red_coord_pool_size, 100}.

% in master, this only applies to blue
% in old_master, this applies to both red / blue
{inter_dc_pool_size, 8}.

% only for master
{inter_dc_red_pool_size, 2}.

% local broadcast config
{tree_fanout, 2}.

