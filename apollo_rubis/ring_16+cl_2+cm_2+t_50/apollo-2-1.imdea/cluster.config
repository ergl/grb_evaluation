% git / rebar config
{grb_branch, "master"}.

% options: default, basic_replication, uniform_blue, metrics
{grb_rebar_profile, default}.

{latencies, #{
    virginia => [{california, 35}, {frankfurt, 44}],
    california => [{virginia, 35}, {frankfurt, 80}],
    frankfurt => [{virginia, 44}, {california, 80}]
}}.

% Override quorum size, set to -1 if we want to use default
% {red_quorum_override, 1}.
{red_leader_cluster, frankfurt}.
{clusters, #{
  virginia => #{servers => ['apollo-1-1.imdea', 'apollo-1-2.imdea'],
                clients => ['apollo-1-3.imdea', 'apollo-1-4.imdea']}

, california => #{servers => ['apollo-1-5.imdea', 'apollo-1-6.imdea'],
                  clients => ['apollo-1-7.imdea', 'apollo-1-9.imdea']}

, frankfurt => #{servers => ['apollo-1-10.imdea', 'apollo-1-11.imdea'],
                 clients => ['apollo-1-12.imdea', 'apollo-2-1.imdea']}

}}.

% grb Config (same keys as in sys.config)
{tree_fanout, 2}.
{ring_creation_size, 16}.
{tcp_id_len_bits, 16}.
{oplog_readers, 20}.
{version_log_size, 25}.
{self_blue_heartbeat_interval, 5}.
{partition_ready_wait_ms, 1}.
{basic_replication_interval, 5}.
{uniform_replication_interval, 5000}.
{local_broadcast_interval, 1}.
{prune_committed_blue_interval, 50}.
{remote_clock_broadcast_interval, 10000}.
{red_heartbeat_interval, 1}.
{red_delivery_interval, 1}.
{red_leader_check_clock_interval, 1}.
{red_prune_interval, 20}.
{red_coord_pool_size, 100}.
