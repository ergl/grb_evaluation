% git / rebar config
{grb_branch, "master"}.
% options: default, basic_replication, uniform_improved
{grb_rebar_profile, basic_replication}.

% Grb Config (same keys as in sys.config)
{ring_creation_size, 64}.
{version_log_size, 25}.
{self_blue_heartbeat_interval, 5}.
{basic_replication_interval, 5}.
{uniform_replication_interval, 5000}.
{local_broadcast_interval, 5}.
{prune_committed_blue_interval, 50}.
{remote_clock_broadcast_interval, 10000}.

% local broadcast config
{tree_fanout, 2}.

% latencies affect outbound and incoming traffic, so set it to half of the RTT
% rounded from Table 1 at https://www.info.ucl.ac.be/~pvr/p111-Bravo.pdf
% {latencies, #{
%   virginia => [{oregon, 50}, {ireland, 40}],
%   oregon => [{virginia, 50}, {ireland, 70}],
%   ireland => [{virginia, 40}, {oregon, 70}]
% }}.

{latencies, #{}}.

{clusters, #{
  oregon => #{servers => ['apollo-1-1.imdea',
                          'apollo-1-2.imdea'],

              clients => ['apollo-1-3.imdea',
                          'apollo-1-4.imdea']}
}}.
