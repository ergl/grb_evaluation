% git / rebar config
{grb_branch, "master"}.

% options: default, basic_replication, uniform_blue, enable_blue_conflict, metrics
{grb_rebar_profile, default}.

{latencies, #{
    virginia => [{oregon, 10}, {ireland, 10}],
    oregon => [{virginia, 10}, {ireland, 10}],
    ireland => [{virginia, 10}, {oregon, 10}]
}}.

% {latencies, #{
%   virginia => [{oregon, 50}, {ireland, 40}, {sydney, 115}],
%   oregon => [{virginia, 50}, {ireland, 70}, {sydney, 80}],
%   ireland => [{virginia, 40}, {oregon, 70}, {sydney, 155}],
%   sydney => [{oregon, 80}, {virginia, 115}, {ireland, 155}]
% }}.

% Override quorum size, set to -1 if we want to use default
% {red_quorum_override, 1}.
{red_leader_cluster, virginia}.
{clusters, #{
  virginia => #{servers => ['apollo-1-1.imdea', 'apollo-1-2.imdea'],
                clients => ['apollo-1-3.imdea', 'apollo-1-4.imdea']}

, ireland => #{servers => ['apollo-1-5.imdea', 'apollo-1-6.imdea'],
               clients => ['apollo-1-7.imdea', 'apollo-1-9.imdea']}

, oregon => #{servers => ['apollo-1-10.imdea', 'apollo-1-11.imdea'],
              clients => ['apollo-1-12.imdea', 'apollo-2-1.imdea']}
}}.

% grb Config (same keys as in sys.config)
{tree_fanout, 2}.
{ring_creation_size, 16}.
{tcp_id_len_bits, 16}.
{oplog_readers, 20}.
{version_log_size, 25}.
{self_blue_heartbeat_interval, 5}.
{partition_ready_wait_ms, 5}.
{basic_replication_interval, 5}.
{uniform_replication_interval, 5000}.
{local_broadcast_interval, 5}.
{prune_committed_blue_interval, 50}.
{remote_clock_broadcast_interval, 10000}.
{red_heartbeat_interval, 5}.
{red_delivery_interval, 5}.
{red_prune_interval, 20}.
{red_coord_pool_size, 100}.
